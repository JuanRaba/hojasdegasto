<h1>Editando  <%= @expense.show_name %> </h1>

<%= form_with model: @expense, url: expense_path(@expense), method: :patch, local: true do |f| %>
  <table class="table" style="width: auto">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Cantidad</th>
        <th scope="col" style="width: 12rem">Fecha</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_field :name %></td>
        <td><%= f.text_field :amount, data: {prefix:"$", thousands: ",", precision: 0}%></td>
        <td> <%= f.text_field :start, class: "datepicker", style: "width: 12rem" %> </td>
      </tr>
    </tbody>
  </table>
  <table class="table" style="width: auto">
    <thead>
      <tr>
        <th scope="col">Categoría</th>
        <th scope="col">Dueño</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%=
            select_tag(
              :category_id,
              options_from_collection_for_select(@categories.order(:name), :id, :name, @expense.category_id)
            )
          %>
        </td>
        <td><%= f.check_box :owner, {checked: false} %> marcar para tomar el gasto</td>
        <td><%= f.submit "Guardar", class: "btn btn-success" %></td>
        <td><%= link_to "Volver a hojaDeGasto", expenses_sheet_url(@expense.expensesSheet), class: "btn btn-primary" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<script>
  $('#expense_amount').maskMoney();
</script>

<script>
  var datepicker = $('.datepicker').datetimepicker(
          { format: 'YYYY/MM/DD',
            icons:
            {
              time: 'fa fa-clock-o',
              date: 'fa fa-calendar',
              up: 'fa fa-chevron-up',
              down: 'fa fa-chevron-down',
              previous: 'fa fa-chevron-left',
              next: 'fa fa-chevron-right',
              today: 'fa fa-calendar-check-o',
              clear: 'fa fa-trash-o',
              close: 'fa fa-close'
            }
          }
        );
  position = datepicker.offset();
  datepicker.css({
    position: 'absolute',
    top: position.top,
    bottom: 'auto',
    left: 'auto',
    right: position.right,
    width: '10rem'
  });
</script>