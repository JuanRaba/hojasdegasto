<div class="wrapper">
  <!-- Sidebar -->
  <%= render 'expenses_sheet/show/sidebar' %>
  <!-- Container -->
  <div class="container">
    <% if alert.present? %>
      <div class="alert alert-warning" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <% if notice.present? %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-12 hideable" id="expensesTable">
        <%= render 'expenses_sheet/show/expensesTable' %>
      </div>
      <div class="col-sm-8 hideable" id="graficBar" style="display: none">
        <%= render 'expenses_sheet/show/grafic/graficBar' %>
      </div>
      <div class="col-sm-8 hideable" id="graficPie" style="display: none">
        <%= render 'expenses_sheet/show/grafic/graficPie' %>
      </div>
      <div class="col-sm-8 hideable" id="graficDoughnut" style="display: none">
        <%= render 'expenses_sheet/show/grafic/graficDoughnut' %>
      </div>     
    </div>
  </div>    
</div>