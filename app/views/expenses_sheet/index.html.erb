<h1>ExpensesSheet#index</h1>
<p>Find me in app/views/expenses_sheet/index.html.erb</p>

userBalance<%= current_user.userBalance %>
userSpent<%= current_user.userSpent %>

<% @expensesSheets.each do |sheet| %>
  <p>-
  <%= sheet.owner.email %>
  userSpent<%= sheet.userSpent(current_user) %>
  userBalance<%= sheet.userBalance(current_user) %>
  <%= link_to "link", expenses_sheet_path(sheet) %>
  </p>
<% end %>


<%= form_with model: @newExpensesSheet, url: expenses_sheet_index_path, method: :post, local: true do |f| %>
  <div class="card col-md-6">
    <%= f.submit "Entrar", class: "btn btn-primary" %>
  </div>
<% end %>