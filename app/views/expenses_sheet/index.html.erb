<h1>ExpensesSheet#index</h1>



<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">userSpent</th>
      <th scope="col">userBalance</th>
      <th scope="col">#asociation</th>
      <th scope="col">owner</th>
    </tr>
  </thead>
  <tbody>
  <% @expensesSheets.each_with_index do |sheet,index| %>
    <tr>
      <th scope="row">
        <%="#{index+1}"%>
        <%= link_to 'x', sheet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </th>
      <td><%= link_to "#{sheet.name}", sheet %></td>
      <td><%= number_to_currency(sheet.userSpent(current_user)) %></td>
      <td><%= number_to_currency(sheet.userBalance(current_user)) %></td>
      <td><%= sheet.asociationLevel %></td>
      <td><%= sheet.owner.email %></td>
    </tr>    
  <% end %>
    <tr>
      <th scope="row"><%="Total"%></th>
      <td><%= @expensesSheets.count() %></td>
      <td><%= number_to_currency(current_user.userSpent) %></td>
      <td><%= number_to_currency(current_user.userBalance) %></td>
      <td></td>      
      <td></td>
    </tr>

    <tr>
    <%= form_with model: @newExpensesSheet, url: expenses_sheet_index_path, method: :post, local: true do |f| %>
      <td><%= f.submit "Crear", class: "btn btn-primary" %></td>
      <td><%= f.text_field :name %></td>
    <% end %>
    </tr>
  </tbody>
</table>

