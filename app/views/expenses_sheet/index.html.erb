<!-- comments container -->
<div class="comment_block" style="margin-top: 10px">
  <h1>Inicio</h1>

   <!-- new comment -->
   <div class="new_comment">

    <!-- build comment -->
    <ul class="user_comment">
      <!-- current #{user} avatar -->
      <div class="user_avatar">
        <img src="https://s3.amazonaws.com/uifaces/faces/twitter/BillSKenney/73.jpg">
      </div><!-- the comment body --><div class="comment_body">
          Hola <%= current_user.show_name%>!!
          <br>
          Tiene <%= @expensesSheets.count() %> hojasDeGasto,
          en donde ha gastado <%= number_to_currency(current_user.userSpent, strip_insignificant_zeros: true) %>
          <br>
          <%= current_user.userBalance < 0 ? 'SIENTO INFORMARLE que' : 'FELICIDADES' %>
          su balance es <%= number_to_currency(current_user.userBalance, strip_insignificant_zeros: true, precision: 0) %></td>
      </div>
      <!-- comments toolbar -->
      <div class="comment_toolbar">
        <!-- inc. date and time -->
        <div class="comment_details">
          <ul>
            <li><i class="fa fa-pencil"></i> <span class="user"><%= current_user.name%></span></li>
            <li><i class="fa fa-clock-o"></i> registrado hace <%=time_ago_in_words(current_user.created_at)%></li>
            <li><i class="fa fa-calendar"></i> con fecha <%= current_user.created_at.to_date %> </li>
          </ul>
        </div><!-- inc. share/reply and love -->
      </div>
      <!-- start user replies -->
      <% @expensesSheets.each do |expensesSheet| %>
      <!-- render expenseSheet not working :( -->
      
          <%= render expensesSheet %>     
      <!-- render expenseSheet not working :( -->
      <% end %>
    </ul>
  </div>

  <!-- used by #{user} to create a new comment -->
  <div class="create_new_comment">
    <div class="input_comment">
      <div class="title">
        Crear una nueva hojaDeGastos
      </div>
      <%= render 'expenses_sheet/form' %>
    </div>
  </div>
</div>