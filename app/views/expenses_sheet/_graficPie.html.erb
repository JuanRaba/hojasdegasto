<canvas id="myPieChart" width="400" height="400"></canvas>
<script>
  var ctx = document.getElementById("myPieChart");
  var myChart = new Chart(ctx, {
      type: 'pie',
      data: {
          labels: <%=@expensesSheet.asociations.map { |a| a.user.email }.to_json.html_safe%>,
          datasets: [{
              data: <%=@expensesSheet.asociations.map { |a| @expensesSheet.userSpent(a.user) }%>,
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(99, 255, 132, 0.2)',
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(99,255,132,1)',
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });
</script>
