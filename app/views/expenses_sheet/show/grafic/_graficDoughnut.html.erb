  var myChart = new Chart(ctx, {
      type: 'doughnut',
      pieSliceText: 'value-and-percentage',
      data: {
          labels: <%=@expenses_by_category.keys.to_json.html_safe%>,
          datasets: [{
              data: <%=@expenses_by_category.values.to_json.html_safe%>,
              backgroundColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(99, 255, 132, 1)',
                  'rgba(99, 132, 255, 1)',
                  'orange',
                  'purple',
                  'gray',

                  'rgba(255, 99, 132, 0.8)',
                  'rgba(99, 255, 132, 0.8)',
                  'rgba(99, 132, 255, 0.8)',

                  'rgba(255, 99, 132, 0.6)',
                  'rgba(99, 255, 132, 0.6)',
