<!-- used in expenses_sheet/show -->
<canvas id="myPieChart" width="400" height="400"></canvas>
<script>
  var ctx = document.getElementById("myPieChart");
  var myChart = new Chart(ctx, {
      type: 'pie',
      data: {
          labels: <%=@expensesSheet.asociations.map { |a| a.user.show_name }.to_json.html_safe%>,
          datasets: [{
              data: <%=@expensesSheet.asociations.map { |a| @expensesSheet.userSpent(a.user) }%>,
              backgroundColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(99, 255, 132, 1)',
                  'rgba(99, 132, 255, 1)',
                  'orange',
                  'purple',
                  'gray',

                  'rgba(255, 99, 132, 0.8)',
                  'rgba(99, 255, 132, 0.8)',
                  'rgba(99, 132, 255, 0.8)',

                  'rgba(255, 99, 132, 0.6)',
                  'rgba(99, 255, 132, 0.6)',
                  'rgba(99, 132, 255, 0.6)',

                  'rgba(255, 99, 132, 0.4)',
                  'rgba(99, 255, 132, 0.4)',
                  'rgba(99, 132, 255, 0.4)',
              ]
          }]
      },
  });
</script>
