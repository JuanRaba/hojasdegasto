<!-- used in expenses_sheet/show -->
<canvas id="myBarChart" width="400" height="400"></canvas>
<script>
  var ctx = document.getElementById("myBarChart");
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: <%=@expenses.map { |e| e.name }.to_json.html_safe%>,
          datasets: [{
              label: '<%=@expensesSheet.name.upcase%>',
              data: <%=@expenses.map { |e| e.amount.to_i }%>,
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });
</script>
