<!-- used in expenses_sheet/show -->
<canvas id="myBarChart" width="400" height="400"></canvas>
<script>
  Chart.defaults.global.defaultFontStyle = 'bold'

  var ctx = document.getElementById("myBarChart");
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: <%=@expenses.map { |e| e.show_name }.to_json.html_safe%>,
          datasets: [{
              label: '<%=@expensesSheet.name.upcase%>',
              data: <%=@expenses.map { |e| e.amount.to_i }%>,
              backgroundColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(99, 255, 132, 1)',
                  'rgba(99, 132, 255, 1)',
                  'orange',
                  'purple',
                  'gray',

                  'rgba(255, 99, 132, 0.8)',
                  'rgba(99, 255, 132, 0.8)',
                  'rgba(99, 132, 255, 0.8)',

                  'rgba(255, 99, 132, 0.6)',
                  'rgba(99, 255, 132, 0.6)',
                  'rgba(99, 132, 255, 0.6)',

                  'rgba(255, 99, 132, 0.4)',
                  'rgba(99, 255, 132, 0.4)',
                  'rgba(99, 132, 255, 0.4)',
              ]
          }]
      },
  });
</script>
