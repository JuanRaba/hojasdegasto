<div class="form-group">
  <%= f.label :nombre %><br />
  <%= f.text_field :name, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :avatar %><br />

<% if Rails.env.development? %>
  <%=
    f.select(
      :avatar,
      options_for_select([
        ["cerdo","cerdo"],
        ["ciervo","ciervo"],
        ["gallo","gallo"],
        ["gato","gato"],
        ["mono","mono"],
        ["panda","panda"],
        ["perro","perro"],
        ["toro","toro"],
        ["zorro","zorro"],
      ])
    )
  %>
<% else %>
  <%= f.text_field :avatar, class:"form-control" %>
<% end %>
</div>
